.row
  .col-sm-3
    .circle: img#profile-pic src=@user.profile_pic

    b= @user.name

    = react_component 'UserSidebar', user:            @user.as_prop,
                                     followers:       @user.followers,
                                     current_user:    @current_user.render,
                                     following:       @current_user.follows?(@user),
                                     friends_with:    @current_user.friends_with?(@user),
                                     request_pending: @current_user.request_pending?(@user)

  .col-sm-9
    = render 'findings/hotkeys_modal'
    = react_component 'FindingsFeed', articles:               @feed,
                                      share_by_default_enums: Finding::Article::SHARE_BY_DEFAULT_ENUM.keys